@model List<InventoryMangmentMvc.Models.ProductViewModel>
@{
    ViewData["Title"] = "Products Near Expiration";
}

<div class="page-header">
    <h1><i class="fas fa-exclamation-triangle text-warning"></i> Products Near Expiration</h1>
    <p>Products approaching their expiration date</p>
</div>

<div class="card">
    <h5><i class="fas fa-box"></i> Results</h5>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Product Name</th>
                        <th>Material</th>
                        <th>Size</th>
                        <th>Type</th>
                        <th>Flavour</th>
                        <th>Quantity</th>
                        <th>Expiration Date</th>
                        <th>Days Until Expiry</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        var daysUntilExpiry = product.ExpirationDate.HasValue
                        ? (product.ExpirationDate.Value - DateTime.Now).Days
                        : 0;
                        var urgencyClass = daysUntilExpiry <= 7 ? "table-danger" :
                        daysUntilExpiry <= 14 ? "table-warning" : "table-info";

                        <tr class="@urgencyClass">
                            <td><strong>#@product.Id</strong></td>
                            <td>@product.ProductName</td>
                            <td>@product.Material</td>
                            <td>@product.Size</td>
                            <td>@product.Type</td>
                            <td>@product.Flavour</td>
                            <td><span class="badge bg-info">@product.Quantity</span></td>
                            <td>
                                @if (product.ExpirationDate.HasValue)
                                {
                                    @product.ExpirationDate.Value.ToString("MMM dd, yyyy")
                                }
                                else
                                {
                                    <span class="text-muted">N/A</span>
                                }
                            </td>
                            <td>
                                @if (daysUntilExpiry <= 0)
                                {
                                    <span class="badge bg-danger">EXPIRED</span>
                                }
                                else if (daysUntilExpiry <= 7)
                                {
                                    <span class="badge bg-danger">@daysUntilExpiry days</span>
                                }
                                else if (daysUntilExpiry <= 14)
                                {
                                    <span class="badge bg-warning">@daysUntilExpiry days</span>
                                }
                                else
                                {
                                    <span class="badge bg-info">@daysUntilExpiry days</span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> Found <strong>@Model.Count</strong> product(s) near expiration
        </div>
    }
    else
    {
        <div class="alert alert-success">
            <i class="fas fa-check-circle"></i> No products found near expiration for the specified time period.
        </div>
    }
</div>

<div class="mt-3">
    <a href="@Url.Action("NearExpiration")" class="btn btn-primary">
        <i class="fas fa-search"></i> New Search
    </a>
    <a href="@Url.Action("Index")" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to Dashboard
    </a>
</div>

<style>
    .table-danger {
        background-color: #f8d7da !important;
    }

    .table-warning {
        background-color: #fff3cd !important;
    }

    .table-info {
        background-color: #d1ecf1 !important;
    }
</style>
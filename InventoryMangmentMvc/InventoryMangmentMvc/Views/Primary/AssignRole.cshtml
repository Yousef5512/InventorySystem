@model InventoryMangmentMvc.Models.AssignRoleViewModel
@{
    ViewData["Title"] = "Assign Role";
}

<div class="page-header">
    <h1><i class="fas fa-user-tag"></i> Assign Role to User</h1>
    <p>Manage user roles and permissions</p>
</div>

<div class="card">
    <form asp-action="AssignRole" method="post">
        <div class="row">
            <div class="col-md-6 mb-3">
                <label>Username:</label>
                <input asp-for="Username" class="form-control" placeholder="Enter username" required />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="col-md-6 mb-3">
                <label>Role:</label>
                <select asp-for="Role" class="form-control" required>
                    <option value="">-- Select Role --</option>
                    <option value="PrimaryUser">Primary User</option>
                    <option value="InventoryEmployee">Inventory Employee</option>
                    <option value="InventoryOrganizer">Inventory Organizer</option>
                    <option value="ReceivingClerk">Receiving Clerk</option>
                    <option value="Supplier">Supplier</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="fas fa-check"></i> Assign Role
        </button>
    </form>
</div>

<div class="card mt-4">
    <h5><i class="fas fa-info-circle"></i> Available Roles</h5>
    <ul>
        <li><strong>Primary User:</strong> Full system access and control</li>
        <li><strong>Inventory Employee:</strong> Manage inventory operations</li>
        <li><strong>Inventory Organizer:</strong> Organize and assign product codes</li>
        <li><strong>Receiving Clerk:</strong> Process incoming shipments</li>
        <li><strong>Supplier:</strong> Manage supplier operations</li>
    </ul>
</div>
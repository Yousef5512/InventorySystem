@{
    ViewData["Title"] = "Delete User";
}

<div class="page-header">
    <h1><i class="fas fa-user-minus"></i> Delete User</h1>
    <p>Remove a user from the system</p>
</div>

<div class="alert alert-danger">
    <i class="fas fa-exclamation-triangle"></i>
    <strong>Warning:</strong> This action cannot be undone! Please be careful when deleting users.
</div>

<div class="card">
    <form asp-action="DeleteUser" method="post">
        <div class="row">
            <div class="col-md-6">
                <label>Username:</label>
                <input type="text" name="username" class="form-control" placeholder="Enter username to delete" required />
                <small class="form-text text-muted">
                    <i class="fas fa-info-circle"></i> Type the exact username
                </small>
            </div>
            <div class="col-md-6 d-flex align-items-end">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?')">
                    <i class="fas fa-trash"></i> Delete User
                </button>
            </div>
        </div>
    </form>
</div>

<div class="card mt-4">
    <h5><i class="fas fa-shield-alt"></i> Safety Notes</h5>
    <ul class="mb-0">
        <li>You cannot delete your own account</li>
        <li>Deleted users cannot be recovered</li>
        <li>All user data will be permanently removed</li>
    </ul>
</div>
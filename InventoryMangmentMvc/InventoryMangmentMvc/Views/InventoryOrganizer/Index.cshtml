@model List<InventoryMangmentMvc.Models.ProductViewModel>
@{
    ViewData["Title"] = "Inventory Organizer Dashboard";
}

<div class="page-header">
    <h1><i class="fas fa-clipboard-list"></i> Inventory Organizer Dashboard</h1>
    <p>Manage and organize product information</p>
</div>

<div class="card">
    <h5><i class="fas fa-box"></i> All Products</h5>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Product Name</th>
                        <th>Product Code</th>
                        <th>Material</th>
                        <th>Size</th>
                        <th>Type</th>
                        <th>Flavour</th>
                        <th>Quantity</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td><strong>#@product.Id</strong></td>
                            <td>@product.ProductName</td>
                            <td>
                                @if (string.IsNullOrEmpty(product.ProductIdCode))
                                {
                                    <span class="badge bg-warning">Not Assigned</span>
                                }
                                else
                                {
                                    <code>@product.ProductIdCode</code>
                                }
                            </td>
                            <td>@product.Material</td>
                            <td>@product.Size</td>
                            <td>@product.Type</td>
                            <td>@product.Flavour</td>
                            <td><span class="badge bg-info">@product.Quantity</span></td>
                            <td>
                                @if (string.IsNullOrEmpty(product.ProductIdCode))
                                {
                                    <form asp-action="AssignProductId" method="post" style="display: inline;">
                                        <input type="hidden" name="productId" value="@product.Id" />
                                        <button type="submit" class="btn btn-sm btn-primary">
                                            <i class="fas fa-tag"></i> Assign Code
                                        </button>
                                    </form>
                                }
                                else
                                {
                                    <span class="text-success">
                                        <i class="fas fa-check-circle"></i> Assigned
                                    </span>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No products found.
        </div>
    }
</div>

<div class="card mt-4">
    <h5><i class="fas fa-info-circle"></i> Product Code Format</h5>
    <p class="mb-2">Product codes are automatically generated in the following format:</p>
    <code class="d-block p-3 bg-light rounded">
        [Material]-[Size]-[Type]-[Flavour]-[UniqueID]
    </code>
    <p class="mt-2 text-muted">
        <small>
            <i class="fas fa-lightbulb"></i> Example: PLASTIC-LARGE-BOTTLE-COLA-a1b2
        </small>
    </p>
</div>